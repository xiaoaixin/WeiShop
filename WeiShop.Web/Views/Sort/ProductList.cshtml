@using WeiShopModel
@model WeiShop.Web.Models.HomeViewModel
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/_LayoutMaster.cshtml";
}

<link href="~/Content/css/Cbase.css" type="text/css" rel="stylesheet">
<link href="~/Content/css/index.css" type="text/css" rel="stylesheet">
<link href="~/Content/css/swiper.min.css" type="text/css" rel="stylesheet">
<script src="~/Scripts/jquery-1.7.2.min.js" type="text/javascript"></script>
<script src="~/Scripts/base.js" type="text/javascript"></script>
<script src="~/Scripts/swiper.min.js" type="text/javascript"></script>
<script src="~/Scripts/index.js" type="text/javascript"></script>

<!--ftop开始-->
<div class="ftop">
    <div class="index_search index_search01">
        <a class="back" onClick="javascript:history.back(-1);"><img src="~/Content/images/icon_03.png"></a>
        <div>
            <input type="text" placeholder="请输入您要搜索的产品">
            <input class="dw" onclick="document.location='search_list.html'" type="button" value=" ">
        </div>
    </div>
    <div style="clear: both;"></div>
</div>
<!--ftop开始-->
<div class="search_list">
    <p><a class="on"><span>综合</span></a><a><span>销量</span></a><a><span>评价</span></a><a><span class="bg">价格</span></a></p>
    <ul>
        @foreach (var item in Model.Products)
        {
            <li>
                <a href="@Url.Action("ProductDetail","Sort",new {proCode=item.Code})">
                    <img src="@item.ProPhotoes.FirstOrDefault(p=>p.No==0).ImgUrl">
                    <div class="search_item">
                        <p>@item.Name</p>
                        <h2><i>￥</i><b>@item.SellPrice</b><span>月销18252笔</span>
                        </h2>
                    </div>
                </a>
            </li>
        }
    </ul>
</div>

<script>
    $(".search_list ul li a img").each(function(){
        var w = $(this).width();
        $(this).height(w+"px");
    })

</script>

